# =============================================================================
# PCVISOR Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# All secrets should be configured here for local/self-hosted deployments
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/pcvisor

# Individual PostgreSQL connection parameters (alternative to DATABASE_URL)
PGHOST=localhost
PGPORT=5432
PGUSER=your_db_user
PGPASSWORD=your_db_password
PGDATABASE=pcvisor

# -----------------------------------------------------------------------------
# SESSION CONFIGURATION
# -----------------------------------------------------------------------------
# Secret key for session encryption (generate a random 32+ character string)
# Example: openssl rand -hex 32
SESSION_SECRET=your-super-secret-session-key-here

# Trust proxy setting (set to 1 if behind a reverse proxy like nginx)
TRUST_PROXY=1

# -----------------------------------------------------------------------------
# LICENSE SERVER CONFIGURATION
# -----------------------------------------------------------------------------
# URL of the license validation server
LICENSE_SERVER_URL=https://license.example.com

# -----------------------------------------------------------------------------
# PUSH NOTIFICATIONS (Web Push / VAPID)
# -----------------------------------------------------------------------------
# Generate VAPID keys using: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:admin@yourdomain.com

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
# Port to run the application on (default: 5000)
PORT=5000

# Node environment: development | production
NODE_ENV=production
