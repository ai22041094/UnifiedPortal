# =============================================================================
# pcvisor Environment Configuration
# Copy this file to .env and update the values
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration (Required)
# -----------------------------------------------------------------------------
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@db:5432/pcvisor

# -----------------------------------------------------------------------------
# Session Configuration (Required)
# -----------------------------------------------------------------------------
# Generate a strong secret: openssl rand -base64 32
SESSION_SECRET=change-this-to-a-strong-random-string

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Node environment (production/development)
NODE_ENV=production

# Application port (default: 5000)
PORT=5000

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
# Redis URL for session storage (auto-configured by docker-compose)
REDIS_URL=redis://redis:6379

# -----------------------------------------------------------------------------
# Proxy Settings
# -----------------------------------------------------------------------------
# Set to 1 when running behind a reverse proxy (nginx, traefik, etc.)
TRUST_PROXY=1

# -----------------------------------------------------------------------------
# Optional: SSL/TLS Configuration
# -----------------------------------------------------------------------------
# Path to SSL certificate (if using HTTPS)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem
